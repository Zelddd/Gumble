<div class="d-flex gap-5 w-100 mb-5 h-100" style="height: 20rem;">
  <div class="rounded-3 border bg-white py-2 px-3 flex-grow-1" style="flex-basis: 0;">
    <h5 class="mb-3 mt-2">Pending</h5>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Table</th>
          <th scope="col">Name</th>
          <th scope="col">Duration</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each tables}}
          {{#if current_order}}
            {{#each current_order.order_lines}}
              {{#if (eq status 0)}}
                <tr>
                  <th style="width: 3rem;">{{id}}</th>
                  <td style="width: 4rem">{{../id}}</td>
                  <td>{{product.name}}</td>
                  <td style="width: 6rem;"></td>
                  <td style="width: 6rem">
                    <ti class="text-primary ti ti-arrow-right" style="cursor: pointer"
                        hx-put="/dashboard/kitchen/orders/status/{{id}}"
                        hx-vals='{"status": 1}' hx-swap="none"
                        _="on htmx:afterOnLoad trigger update">
                    </ti>
                  </td>
                </tr>
              {{/if}}
            {{/each}}
          {{/if}}
        {{/each}}
      </tbody>
    </table>
  </div>
  <div class="rounded-3 border bg-white py-2 px-3 flex-grow-1" style="flex-basis: 0;">
    <h5 class="mb-3 mt-2">Ongoing</h5>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Table</th>
          <th scope="col">Name</th>
          <th scope="col">Duration</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <tbody>
        {{#each tables}}
          {{#if current_order}}
            {{#each current_order.order_lines}}
              {{#if (eq status 1)}}
                <tr>
                  <th style="width: 3rem;">{{id}}</th>
                  <td style="width: 4rem">{{../id}}</td>
                  <td>{{product.name}}</td>
                  <td style="width: 6rem;"></td>
                  <td style="width: 6rem">
                    <ti class="text-primary ti ti-arrow-left" style="cursor: pointer"
                        hx-put="/dashboard/kitchen/orders/status/{{id}}"
                        hx-vals='{"status": 0}' hx-swap="none"
                        _="on htmx:afterOnLoad trigger update">
                    </ti>
                    <ti class="ps-1 text-success ti ti-check" style="cursor: pointer"
                        hx-put="/dashboard/kitchen/orders/status/{{id}}"
                        hx-vals='{"status": 2}' hx-swap="none"
                        _="on htmx:afterOnLoad trigger update">
                    </ti>
                  </td>
                </tr>
              {{/if}}
            {{/each}}
          {{/if}}
        {{/each}}
      </tbody>
    </table>
  </div>
</div>