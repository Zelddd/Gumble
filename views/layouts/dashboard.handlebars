<!DOCTYPE html>
<html>
  <head>
    {{> libraries}}
  </head>
  <body class="vh-100 d-flex">
    <div class="flex-shrink-0">
      {{> dashboard/navbar }}
    </div>
    <div class="d-flex flex-column bg-light flex-fill overflow-auto" style="padding: 3rem 5rem;">
      <div class="mb-3 d-flex align-items-center">
        <h3 class="flex-fill">{{title}}</h3>
        {{#if subelement}}
          {{> (lookup . 'subelement')}}
        {{else}}
          <h5>{{subtitle}}</h5>
        {{/if}}
      </div>
      <div class="p-3 flex-fill">
        {{{body}}}
      </div>
    </div>
  </body>
</html>